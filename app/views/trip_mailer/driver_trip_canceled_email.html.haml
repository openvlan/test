%table.em_main_table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "table-layout: fixed;", :width => "100%"}
  %td
    = t('user_mailer.driver_trip_canceled_email.trip_number', trip_number: @trip.trip_number)
  %tr
    %tr
      %td{:height => "40", :style => "font-size: 1px; line-height: 1px"}  
    %tr
      %td{:style => "font-size: 20px;"}
        %b
          =t('user_mailer.driver_trip_canceled_email.details')
    %tr
      %td{:height => "10", :style => "font-size: 1px; line-height: 1px"}  
    
    = render 'parts/bold_line'
    %td
      - @steps.each do |step|
        = render partial: 'parts/orders_locations', object: step, as: 'step'

= render :partial => 'parts/order_contact_footer'
