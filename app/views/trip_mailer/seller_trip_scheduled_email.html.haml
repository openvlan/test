%table.em_main_table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "table-layout: fixed;", :width => "100%"}
  %tr
    %td
      =t('user_mailer.scheduled_trip.greeting', first_name: @user.first_name)
  %tr
    %td.em_height{:height => "10"}
  %tr
    %td
      =t('user_mailer.scheduled_trip.pickup_scheduled')
  %tr
    %td.em_height{:height => "30"}

  = render 'parts/trip_row', title: t('user_mailer.scheduled_trip.pickup_location'), content: @location['street_1'] + ', ' + @location['city'] + ', ' + @location['country']
  = render 'parts/trip_row', title: t('user_mailer.scheduled_trip.pickup_date'), content: @start_date

  %tr
    %td.em_height{:height => "30"}

  = render 'parts/trip_row', title: t('user_mailer.scheduled_trip.driver_company'), content: (@driver.company ? @driver.company.name : '-')
  = render 'parts/trip_row', title: t('user_mailer.scheduled_trip.vehicle_information'), content: [@driver.vehicle&.truck_type&.humanize, @driver.vehicle&.make,@driver.vehicle&.model,@driver.vehicle&.license_plate].join(",")

  %tr
    %td.em_height{:height => "30"} 

= render :partial => 'parts/order_contact_footer'
